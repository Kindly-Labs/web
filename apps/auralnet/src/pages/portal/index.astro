---
import Layout from '../../components/layouts/Layout.astro';
---

<Layout title="Portal | AuralNet">
  
  <div class="min-h-screen flex flex-col justify-between pt-32 pb-16 px-8 md:px-16 max-w-[1400px] mx-auto">
    
    <!-- Header -->
    <header class="border-b border-foreground/20 pb-8">
      <div class="flex justify-between items-start">
        <h1 class="text-xs font-mono uppercase tracking-widest text-muted-foreground">[ PORTAL / 004 ]</h1>
        <div class="text-xs font-mono uppercase tracking-widest text-muted-foreground text-right hidden md:block">
          Level 3 Security<br/>
          Authorization Required
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow flex flex-col justify-center items-center">
      
      <div class="max-w-md w-full border border-foreground/10 p-12 bg-foreground/5 relative">
        <!-- Status Dot -->
        <div class="absolute top-6 right-6 flex items-center gap-2">
          <span class="text-xs font-mono text-muted-foreground">Gateway</span>
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
        </div>

        <h2 class="text-2xl font-bold mb-8 tracking-tight">Access Control</h2>

        <form class="space-y-8" action="/portal/dashboard">
          <div>
            <label class="block text-xs font-mono uppercase tracking-widest text-muted-foreground mb-4">Partner ID / Access Key</label>
            <input 
              type="text" 
              class="w-full bg-transparent border-b border-foreground/30 py-2 text-2xl font-light focus:outline-none focus:border-primary transition-colors placeholder:opacity-20"
              placeholder="____-____-____"
              autofocus
            />
          </div>

          <button class="w-full border border-foreground px-8 py-4 font-mono text-sm tracking-widest hover:bg-foreground hover:text-background transition-colors uppercase">
            Authenticate
          </button>
        </form>

        <div class="mt-8 pt-8 border-t border-foreground/10 text-center">
          <p class="text-xs text-muted-foreground">Request Access: <a href="/contact" class="underline hover:text-foreground">team@owly.ai</a></p>
        </div>
      </div>

    </main>

    <!-- Footer Status -->
    <footer class="pt-16 border-t border-foreground/10 flex justify-between items-end">
      <div>
        <p class="text-xs font-mono uppercase tracking-widest text-muted-foreground mb-2">System Status</p>
        <p class="text-lg font-medium text-green-500">Operational</p>
      </div>
      <div class="text-right">
        <p class="text-xs font-mono uppercase tracking-widest text-muted-foreground mb-2">Nodes Active</p>
        <p class="text-lg font-medium">3</p>
      </div>
    </footer>

  </div>
</Layout>
