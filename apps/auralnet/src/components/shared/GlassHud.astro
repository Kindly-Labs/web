---
/**
 * GlassHud Component
 *
 * Floating navigation HUD with glassmorphism styling.
 *
 * PRD Requirements (Section 3.1):
 * - Pill-shaped glass bar
 * - Floating 20px from top (Desktop)
 * - Fixed bottom (Mobile)
 * - "Donate" button with heartbeat animation
 * - Optional: Mega-menu support (future enhancement)
 *
 * Usage:
 * <GlassHud />
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const navLinks = [
  { label: 'About', href: '/about' },
  { label: 'Voice OS', href: '/services' },
  { label: 'Governance', href: '/transparency' },
  { label: 'Contact', href: '/contact' },
];
---

<nav class={`glass-hud-nav ${className}`}>
  <div class="hud-container">
    <!-- Logo/Brand -->
    <a href="/" class="hud-logo">
      <span class="logo-text">Owly Labs</span>
    </a>

    <!-- Navigation Links -->
    <div class="hud-links">
      {navLinks.map((link) => (
        <a href={link.href} class="hud-link">
          {link.label}
        </a>
      ))}
    </div>

    <div class="hud-right">
      <!-- CTA: Donate Button with Heartbeat -->
      <a href="/donate" class="hud-donate-btn">
        <span class="heartbeat-icon">â™¥</span>
        <span>Donate</span>
      </a>

      <!-- Hamburger Menu -->
      <button class="hamburger" id="hud-hamburger" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu" id="hud-mobile-menu">
    <div class="mobile-links">
      {navLinks.map((link) => (
        <a href={link.href} class="mobile-link">
          {link.label}
        </a>
      ))}
      <a href="/donate" class="mobile-link highlight">Donate</a>
    </div>
  </div>
</nav>

<script>
  const hamburger = document.getElementById('hud-hamburger');
  const mobileMenu = document.getElementById('hud-mobile-menu');

  hamburger?.addEventListener('click', () => {
    hamburger.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
    document.body.classList.toggle('no-scroll');
  });

  // Close menu when clicking a link
  const mobileLinks = document.querySelectorAll('.mobile-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      hamburger?.classList.remove('active');
      mobileMenu?.classList.remove('active');
      document.body.classList.remove('no-scroll');
    });
  });
</script>

<style>
  /* Main HUD Container */
  .glass-hud-nav {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    width: max-content;
    max-width: calc(100% - 40px);
  }

  /* Glass HUD styling (10% opacity, low blur) */
  .hud-container {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 0.75rem 1.5rem;
    background: rgba(20, 30, 20, 0.1);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 9999px; /* Pill shape */
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .hud-container:hover {
    background: rgba(20, 30, 20, 0.15);
    border-color: rgba(0, 255, 148, 0.1);
  }

  /* Logo */
  .hud-logo {
    font-family: 'Roboto Mono', monospace;
    font-weight: bold;
    font-size: 1rem;
    color: #00FF94; /* Neon green */
    text-decoration: none;
    white-space: nowrap;
  }

  /* Navigation Links */
  .hud-links {
    display: flex;
    gap: 1.5rem;
  }

  .hud-link {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .hud-link:hover {
    color: #00FF94;
  }

  /* Donate Button with Heartbeat */
  .hud-donate-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: #00FF94;
    color: #0A2F1F;
    font-family: 'Roboto Mono', monospace;
    font-size: 0.875rem;
    font-weight: bold;
    text-decoration: none;
    text-transform: uppercase;
    border-radius: 9999px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .hud-donate-btn:hover {
    background: #00CC76;
    box-shadow: 0 0 20px rgba(0, 255, 148, 0.4);
  }

  /* Heartbeat Animation */
  .heartbeat-icon {
    animation: heartbeat 1.5s ease-in-out infinite;
    font-size: 1rem;
  }

  @keyframes heartbeat {
    0%, 100% {
      transform: scale(1);
    }
    10% {
      transform: scale(1.2);
    }
    20% {
      transform: scale(1);
    }
    30% {
      transform: scale(1.2);
    }
    40% {
      transform: scale(1);
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .glass-hud-nav {
      top: auto;
      bottom: 20px;
      left: 20px;
      right: 20px;
      transform: none;
      width: auto;
      max-width: none;
    }

    .hud-container {
      gap: 1rem;
      padding: 0.75rem 1rem;
      justify-content: space-between;
    }

    /* Hide nav links on mobile, show hamburger menu instead */
    .hud-links {
      display: none;
    }

    .hud-logo {
      font-size: 0.875rem;
    }

    .hud-donate-btn {
      padding: 0.5rem 0.75rem;
      font-size: 0.75rem;
    }
  }

  /* Mobile Menu Styles */
  .hud-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 101;
  }

  .hamburger span {
    width: 100%;
    height: 2px;
    background: #fff;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .hamburger.active span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(10, 37, 64, 0.95);
    backdrop-filter: blur(20px);
    z-index: 99;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .mobile-menu.active {
    opacity: 1;
    pointer-events: all;
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .mobile-link {
    font-family: 'Roboto Mono', monospace;
    font-size: 1.5rem;
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .mobile-link:hover, .mobile-link.highlight {
    color: #00FF94;
  }

  body.no-scroll {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }
  }

  /* Accessibility: Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    .heartbeat-icon {
      animation: none;
    }
  }
</style>
