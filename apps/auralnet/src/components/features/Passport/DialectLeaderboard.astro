---
const LEADERBOARD = [
  { name: "Toishanese", origin: "China/USA", votes: 1240, status: "Active Pilot" },
  { name: "Spanglish (Dominican)", origin: "NYC/DR", votes: 892, status: "Waiting List" },
  { name: "Jamaican Patois", origin: "Jamaica", votes: 654, status: "Waiting List" },
  { name: "Gullah", origin: "South Carolina", votes: 412, status: "Waiting List" },
];
---

<div class="w-full max-w-4xl mx-auto mt-24 mb-12">
  <div class="text-center mb-8">
    <h3 class="text-2xl font-bold text-foreground mb-2">Community Wishlist</h3>
    <p class="text-sm text-muted-foreground">Vote for the next dialect Aether should support.</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {LEADERBOARD.map((dialect, index) => (
      <div class="glass-panel p-4 flex items-center justify-between group">
        <div class="flex items-center gap-4">
          <span class="text-lg font-bold text-muted-foreground font-mono w-6 text-center group-hover:text-primary transition-colors">
            {index + 1}
          </span>
          <div>
            <h4 class="font-bold text-foreground text-sm">{dialect.name}</h4>
            <div class="flex items-center gap-2 mt-0.5">
               <p class="text-xs text-muted-foreground">{dialect.origin}</p>
               {dialect.status === 'Active Pilot' && (
                 <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-green-500/20 text-green-400">
                   Active Pilot
                 </span>
               )}
            </div>
          </div>
        </div>
        
        <div class="text-right">
          <span class="block text-lg font-bold text-primary font-mono">{dialect.votes}</span>
          <span class="text-[10px] text-muted-foreground uppercase tracking-wider">Votes</span>
        </div>
      </div>
    ))}
  </div>
  
  <div class="mt-8 text-center">
     <a href="/about" class="text-xs text-muted-foreground hover:text-primary underline underline-offset-4 decoration-1 transition-colors">
        Why isn't my dialect listed?
     </a>
  </div>
</div>
