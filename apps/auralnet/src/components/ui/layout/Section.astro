---
interface Props {
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
  background?: 'default' | 'gradient' | 'transparent';
}

const { spacing = 'lg', className = '', background = 'default' } = Astro.props;
---

<section class:list={['section', `section-spacing-${spacing}`, `section-bg-${background}`, className]}>
  <slot />
</section>

<style>
  .section {
    position: relative;
    width: 100%;
  }

  /* Spacing variations */
  .section-spacing-sm {
    padding: var(--spacing-8) 0;
  }

  .section-spacing-md {
    padding: var(--spacing-12) 0;
  }

  .section-spacing-lg {
    padding: var(--spacing-16) 0;
  }

  .section-spacing-xl {
    padding: var(--spacing-20) 0;
  }

  /* Background variations */
  .section-bg-default {
    background: linear-gradient(180deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
  }

  .section-bg-gradient {
    background: var(--color-background-gradient);
  }

  .section-bg-transparent {
    background: transparent;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .section-spacing-sm {
      padding: var(--spacing-6) 0;
    }

    .section-spacing-md {
      padding: var(--spacing-8) 0;
    }

    .section-spacing-lg {
      padding: var(--spacing-10) 0;
    }

    .section-spacing-xl {
      padding: var(--spacing-12) 0;
    }
  }
</style>
