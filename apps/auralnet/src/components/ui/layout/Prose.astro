---
// Prose component for rich text content with forest-themed styling
---

<div class="prose">
  <slot />
</div>

<style>
  .prose {
    color: var(--color-text-light);
    line-height: 1.8;
  }

  /* Headings */
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    font-family: var(--font-family-heading);
    font-weight: var(--font-weight-bold);
    line-height: 1.3;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    scroll-margin-top: 120px; /* For anchor links with fixed header */
  }

  .prose :global(h1) {
    font-size: 2.5rem;
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .prose :global(h2) {
    font-size: 2rem;
    color: var(--color-secondary);
    border-bottom: 2px solid rgba(124, 179, 66, 0.3);
    padding-bottom: 0.5rem;
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    color: var(--color-accent);
  }

  .prose :global(h4) {
    font-size: 1.25rem;
    color: var(--color-text-light);
  }

  .prose :global(h5),
  .prose :global(h6) {
    font-size: 1rem;
    color: var(--color-text-light);
  }

  /* First heading has no top margin */
  .prose :global(h1:first-child),
  .prose :global(h2:first-child),
  .prose :global(h3:first-child),
  .prose :global(h4:first-child) {
    margin-top: 0;
  }

  /* Paragraphs */
  .prose :global(p) {
    margin: 1.25rem 0;
    color: var(--color-text-light);
  }

  .prose :global(p:first-child) {
    margin-top: 0;
  }

  /* Links */
  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-color: rgba(124, 179, 66, 0.3);
    text-underline-offset: 3px;
    transition: all 0.3s ease;
  }

  .prose :global(a:hover) {
    color: var(--color-secondary);
    text-decoration-color: var(--color-secondary);
  }

  /* Lists */
  .prose :global(ul),
  .prose :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
    color: var(--color-text-light);
  }

  .prose :global(li) {
    margin: 0.75rem 0;
    padding-left: 0.5rem;
  }

  .prose :global(ul) {
    list-style-type: disc;
  }

  .prose :global(ul ul) {
    list-style-type: circle;
  }

  .prose :global(ul ul ul) {
    list-style-type: square;
  }

  .prose :global(ol) {
    list-style-type: decimal;
  }

  .prose :global(li::marker) {
    color: var(--color-accent);
  }

  /* Nested lists */
  .prose :global(li > ul),
  .prose :global(li > ol) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Blockquotes */
  .prose :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: rgba(124, 179, 66, 0.1);
    border-left: 4px solid var(--color-accent);
    border-radius: 8px;
  }

  .prose :global(blockquote p) {
    margin: 0;
    color: var(--color-text-light);
    font-style: italic;
  }

  /* Code */
  .prose :global(code) {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.9em;
    padding: 0.2em 0.4em;
    background: rgba(232, 153, 92, 0.15);
    border: 1px solid rgba(232, 153, 92, 0.3);
    border-radius: 4px;
    color: var(--color-secondary);
  }

  .prose :global(pre) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: rgba(10, 47, 31, 0.6);
    border: 1px solid rgba(124, 179, 66, 0.3);
    border-radius: 12px;
    overflow-x: auto;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  .prose :global(pre code) {
    padding: 0;
    background: none;
    border: none;
    color: var(--color-text-light);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  /* Tables */
  .prose :global(table) {
    width: 100%;
    margin: 2rem 0;
    border-collapse: collapse;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .prose :global(thead) {
    background: linear-gradient(135deg, rgba(124, 179, 66, 0.2) 0%, rgba(232, 153, 92, 0.2) 100%);
  }

  .prose :global(th) {
    padding: 1rem;
    text-align: left;
    font-family: var(--font-family-heading);
    font-weight: var(--font-weight-bold);
    color: var(--color-secondary);
    border-bottom: 2px solid var(--color-accent);
  }

  .prose :global(td) {
    padding: 1rem;
    border-bottom: 1px solid rgba(124, 179, 66, 0.2);
    color: var(--color-text-light);
  }

  .prose :global(tbody tr) {
    background: rgba(255, 255, 255, 0.02);
    transition: background 0.3s ease;
  }

  .prose :global(tbody tr:hover) {
    background: rgba(124, 179, 66, 0.08);
  }

  .prose :global(tbody tr:last-child td) {
    border-bottom: none;
  }

  /* Horizontal Rule */
  .prose :global(hr) {
    margin: 3rem 0;
    border: none;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, var(--color-accent) 50%, transparent 100%);
    opacity: 0.5;
  }

  /* Strong and Emphasis */
  .prose :global(strong) {
    font-weight: var(--font-weight-bold);
    color: var(--color-secondary);
  }

  .prose :global(em) {
    font-style: italic;
    color: var(--color-text-light);
  }

  /* Images */
  .prose :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 12px;
    border: 1px solid rgba(124, 179, 66, 0.2);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  /* Definition Lists */
  .prose :global(dl) {
    margin: 1.5rem 0;
  }

  .prose :global(dt) {
    font-weight: var(--font-weight-bold);
    color: var(--color-secondary);
    margin-top: 1rem;
  }

  .prose :global(dd) {
    margin-left: 2rem;
    margin-top: 0.5rem;
    color: var(--color-text-light);
  }

  /* Details/Summary */
  .prose :global(details) {
    margin: 1.5rem 0;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(124, 179, 66, 0.2);
    border-radius: 12px;
  }

  .prose :global(summary) {
    cursor: pointer;
    font-weight: var(--font-weight-bold);
    color: var(--color-accent);
    user-select: none;
    margin: -1.5rem -1.5rem 0;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .prose :global(summary:hover) {
    color: var(--color-secondary);
    background: rgba(124, 179, 66, 0.05);
  }

  .prose :global(details[open] summary) {
    border-bottom: 1px solid rgba(124, 179, 66, 0.2);
    margin-bottom: 1.5rem;
  }

  /* Callout/Alert Boxes (custom classes) */
  .prose :global(.callout) {
    margin: 2rem 0;
    padding: 1.5rem;
    border-radius: 12px;
    border-left: 4px solid;
  }

  .prose :global(.callout-info) {
    background: rgba(124, 179, 66, 0.1);
    border-color: var(--color-accent);
  }

  .prose :global(.callout-warning) {
    background: rgba(232, 153, 92, 0.1);
    border-color: var(--color-secondary);
  }

  .prose :global(.callout-success) {
    background: rgba(124, 179, 66, 0.15);
    border-color: var(--color-accent);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .prose :global(h1) {
      font-size: 2rem;
    }

    .prose :global(h2) {
      font-size: 1.6rem;
    }

    .prose :global(h3) {
      font-size: 1.3rem;
    }

    .prose :global(table) {
      font-size: 0.9rem;
    }

    .prose :global(th),
    .prose :global(td) {
      padding: 0.75rem;
    }

    .prose :global(pre) {
      padding: 1rem;
      font-size: 0.85rem;
    }
  }
</style>
